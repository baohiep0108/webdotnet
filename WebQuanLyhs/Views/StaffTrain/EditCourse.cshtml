@model BusinessObject.Data.Course

@{
    ViewData["Title"] = "EditCourse";
}
@{
    Layout = "_LayoutStaff";
}

<h4 class="fw-bold py-3 mb-4">
    <span class="text-muted fw-light"> Course management /</span> Create Course
</h4>
<div class="row">
    <div class="col-xxl">
        <div class="card mb-4">
          <div class="card-body">
        <form asp-action="EditCourse">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Coures_id" />
                    <div class="row mb-3 form-group">
                        <label class="col-sm-2 col-form-label control-label" asp-for="Coures_name"></label>
                        <div class="col-sm-10">
                            <input asp-for="Coures_name" class="form-control phone-mask">
                        </div>
                        <span asp-validation-for="Coures_name" class="text-danger"></span>
                    </div>
                    <div class="row mb-3 form-group">
                        <label class="col-sm-2 col-form-label control-label" asp-for="Category_coures_id"></label>
                        <div class="col-sm-10">
                            <select asp-for="Category_coures_id" class="form-control phone-mask" asp-items="ViewBag.KhoaHocSVList"></select>
                        </div>
                        <span asp-validation-for="Category_coures_id" class="text-danger"></span>
                    </div>

                    <div class="row form-group">
                        <div class="col-sm-10">
                            <input type="submit" value="Save" class="btn btn-outline-success" />
                        </div>
                    </div>

        </form>
    </div>
</div>
</div>
</div>
<div class="d-flex justify-content-end">
    <a class="btn btn-danger ml-auto" asp-action="CourseIndex">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
