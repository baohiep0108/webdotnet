                <label class="col-sm-2 col-form-label control-label" asp-for="Detail"></label>
                <div class="col-sm-10">
                    <input asp-for="Detail" class="form-control phone-mask" >
                </div>
                <span asp-validation-for="Detail" class="text-danger"></span>
            </div>
            <div class="row mb-3 form-group">
                <label class="col-sm-2 col-form-label control-label" asp-for="Avata"></label>
                <div class="col-sm-10">
                    <input asp-for="Avata" class="form-control phone-mask" >
                </div>
                <span asp-validation-for="Avata" class="text-danger"></span>
