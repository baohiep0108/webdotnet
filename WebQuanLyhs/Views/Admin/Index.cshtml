@model IEnumerable<BusinessObject.Data.User>

@{
    ViewData["Title"] = "Index";
}

<h4 class="fw-bold py-3 mb-4">Account management</h4>
<div class="clearfix mb-3"> 
        <a class="btn btn-success float-end" style="color: white;" asp-action="AddAccount">Create Account</a>
</div>
    <div class="row">
        <div class="card">
            <div class="table-responsive text-nowrap">
    <table class="table table-striped">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Password)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Fullname)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Role)
            </th>
            <th></th>
        </tr>
    </thead>
        <tbody class="table-border-bottom-0">
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Password)
            </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Fullname)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Role.Role_name)
                </td>
            <td>
                     <a class="btn-sm btn btn btn-warning" asp-action="EditAcc" asp-route-id="@item.User_id">Edit</a> |
                    <a href="#" data-id="@item.User_id" class="btn btn-sm btn-danger btnDelete"> Delete</a>
            </td>
        </tr>
}
    </tbody>

    </table>
            </div>
        </div>
    </div>
@section scripts{
    <script>


        $(document).ready(function () {
            $('body').on('click', '.btnDelete', function () {
                var id = $(this).data("id");
                var conf = confirm('You Delete Account ?');
               
                if (conf === true) {
                    
                    $.ajax({
                        url: '/admin/deleteAcc',
                        type: 'POST',
                        data: { id: id },
                        success: function (rs) {
                            if (rs.success) {
                                $('#trow_' + id).remove();
                                location.reload();
                            }
                        }
                    });
                }
             });
        });
       
    </script>
    }
