@model BusinessObject.Viewmodel.UserLogin

@{
    ViewData["Title"] = "Add Account";
}

<h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light">Account management /</span> Add Account</h4>

<div class="row">
    <div class="col-xxl">
        <div class="card mb-4">
        <div class="card-header d-flex align-items-center justify-content-between">
            <h5 class="mb-0">Add User</h5>
        </div>
        <div class="card-body">    
         <form asp-action="AddAccount">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="row mb-3 form-group">
                    <label class="col-sm-2 col-form-label" asp-for="Fullname" >Full name</label>
                    <div class="col-sm-10">
                            <input type="text" class="form-control" asp-for="Fullname" placeholder="Enter your Name">
                    </div>
                    <span asp-validation-for="Fullname" class="text-danger"></span>
                </div>
                <div class="row mb-3 form-group">
                    <label class="col-sm-2 col-form-label" asp-for="Email">Email</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" asp-for="Email" placeholder=" Enter your Email.">
                    </div>
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="row mb-3 form-group">
                    <label class="col-sm-2 col-form-label" asp-for="Password">Password</label>
                    <div class="col-sm-10">
                        <input type="password" class="form-control" asp-for="Password" placeholder="Enter your password.">
                    </div>
                    <span asp-validation-for="Password" class="text-danger"></span>

                </div>
               
                <div class="row mb-3 form-group">
                    <label class="col-sm-2 col-form-label" asp-for="Role_id"></label>

                        <div class="col-sm-10">
                            <select asp-for="Role_id" class="form-control" asp-items="ViewBag.PhanLoaiSVList">
                                <option value=""> -- Select student classification -- </option>
                            </select>
                        </div>


                </div>
          
                <div class="row form-group">
                    <div class="col-sm-10">
                        <button type="submit" class="btn btn-outline-success">Submit</button>
                    </div>
                </div>
        </form>

          
        </div>
    </div>
    </div>
</div>
<div class="d-flex justify-content-end">
    <a class="btn btn-danger ml-auto" asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
