@model IEnumerable<BusinessObject.Data.Teacher_Class>

@{
    ViewData["Title"] = "Index";
}
@{
    Layout = "_LayoutStudentandTeacher";
}
 @section Sidebar {
                <div class="row col-md-12 m-3">
                    <div id="carouselExampleCaptions" class="carousel slide" data-bs-ride="carousel">
                        <div class="carousel-indicators">
                            <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="0" class="active"
                                    aria-current="true" aria-label="Slide 1"></button>
                            <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="1"
                                    aria-label="Slide 2"></button>
                            <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="2"
                                    aria-label="Slide 3"></button>
                        </div>
                        <div class="carousel-inner">
                            <div class="carousel-item active">
                                <img src="~/Hinh/Logo/sl1.jpg" class="d-block w-100" alt="...">

                            </div>
                            <div class="carousel-item">
                                <img src="~/Hinh/Logo/sl2.jpg" class="d-block w-100" alt="...">

                            </div>
                            <div class="carousel-item">
                                <img src="~/Hinh/Logo/sl4.jpg" class="d-block w-100" alt="...">

                            </div>
                        </div>
                        <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleCaptions"
                                data-bs-slide="prev">
                            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                            <span class="visually-hidden">Previous</span>
                        </button>
                        <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleCaptions"
                                data-bs-slide="next">
                            <span class="carousel-control-next-icon" aria-hidden="true"></span>
                            <span class="visually-hidden">Next</span>
                        </button>
                    </div>

                </div>
            }
@foreach (var item in Model)
{
    <div style="height:350px" class="card m-2" style="width: 18rem; position: relative;">
        <img class="card-img-top bg-image" src="" alt="Card image cap"> <!-- Loại bỏ id, thay vào đó sử dụng class để có thể chọn tất cả các ảnh -->
        <div class="card-body">
            <h5 class="card-title"> @Html.DisplayFor(modelItem => item.Class_Role.Name)</h5>
            <p class="card-text">Teacher teaching: @Html.DisplayFor(modelItem => item.Teacher_Course.Fullname)</p>
            <a asp-action="Detailcourse" asp-route-id="@item.Teacher_Course_id" class="btn btn-primary details-button" >Details</a>
        </div>
    </div>
}


   



