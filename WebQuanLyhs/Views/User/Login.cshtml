@model BusinessObject.Viewmodel.UserLogin

@{
	Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<title>Email Validation</title>
<link rel="stylesheet" href="~/css/Login.css">
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
 <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.2.1/dist/css/bootstrap.min.css" integrity="sha384-GJzZqFGwb1QTTN6wy59ffF1BuGJpLSa9DkKMp0DgiMDm4iYMj70gZWKYbI706tWS" crossorigin="anonymous">
</head>
<body>
<div class="container-fluid">
    <div class="row">
        <div style="display: flex;height:100vh" class="col-md-6 Login">
            <div class="login-form">
                <h1 class="header-area" style="font-weight: 650; margin-bottom:20px">Log in to your account</h1>
                <p class="lead" style="margin:15px;color: rgba(127, 127, 127, 0.807);">Welcome! Select method to login:</p>
                    <form class="needs-validation" asp-action="Login" asp-route-returnurl="@ViewBag.ReturnUrl" novalidate>
                        <div class="text-danger result" asp-validation-summary="ModelOnly"></div>
                    <div class=" mb-3">
                        <label asp-for="@Model.Email" class="form-label">Email:</label>
                         <input type="text" class="form-control" id="validationServerEmail" asp-for="@Model.Email" placeholder="Enter your email" required>
                         <span asp-validation-for="@Model.Email" class="text-danger result"></span>
                      
                      
                    </div>
                    <div class="mb-3">
                        <div class="form-item w-100">
                            <label asp-for="@Model.Password" class="form-label">Password:</label>
                            <input asp-for="@Model.Password" class="form-control password" type="password" placeholder="Enter your password" >
                             <span asp-validation-for="@Model.Password" class="text-danger result"></span>
                        </div>
                    </div>
                    <div class="row mb-3">
                        <button type="submit" class="btn-login">Login</button>
                    </div>
                </form>
            </div>
        </div>
        <div class="col-md-6 Login">
            <div style="height: 100vh;display:flex;align-items:center;justify-content:center; background-color: var(--cam);">
                <div style="text-align:center;" class="background-left ">
                    <h2  style="padding-bottom:40px" class="background-content">Academic Portal </h2>
                    <div class="circle">
                        <img style="max-height: 50%;max-width: 50%;    transform: translate(-50%,-50%);" class="logoimg img-thumbnai" src="~/Hinh/Logo/logo-removebg-preview.png" alt="ảnh logo">
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.min.js" integrity="sha384-cVKIPhGWiC2Al4u+LWgxfKTRIcfu0JTxR+EQDz/bgldoEyl4H0zUF0QKbrJ0EcQF" crossorigin="anonymous"></script>
    
    <script>
        var resultElements = document.querySelectorAll('.result');

        function fadeOutAndRemove(element) {
            element.classList.add('fade-out');
            setTimeout(function () {
                element.remove();
            }, 2000);
        }
        resultElements.forEach(function (element) {
            setTimeout(function () {
                fadeOutAndRemove(element);
            }, 2000);
        });
    </script>



</body>
</html>



